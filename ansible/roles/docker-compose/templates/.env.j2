# {{ ansible_managed }}
# .env file generated by Ansible for {{ inventory_hostname }}

homelab_ip={{ homelab_ip }}

# Path where Docker Compose project is located on the server
# This comes from host_vars/{{ inventory_hostname }}.yml or group_vars/
HOMELAB_DOCKER_PATH={{ homelab_dest }}

# HTTP ports from Ansible variables
adguard_ui_port={{ adguard_ui_port }}
homepage_port={{ homepage_port }}

# DNS & monitoring from Ansible variables
adguard_dns_port={{ adguard_dns_port }}
glances_port={{ glances_port }}
netdata_port={{ netdata_port }}
dashy_port={{ dashy_port }}
uptime_kuma_port={{ uptime_kuma_port }}
openspeedtest_port={{ openspeedtest_port }}
wireguard_int_port={{ wireguard_int_port }}
wireguard_ext_port={{ wireguard_ext_port }}
wireguard_server_url={{ wireguard_server_url }}
wireguard_peers={{ wireguard_peers }}
home_assistant_port={{ home_assistant_port }}
qbittorrent_port={{ qbittorrent_port }}
sonarr_port={{ sonarr_port }}
radarr_port={{ radarr_port }}
lidarr_port={{ lidarr_port }}
bazarr_port={{ bazarr_port }}
jellyseerr_port={{ jellyseerr_port }}
jellyfin_port={{ jellyfin_port }}
qbittorrent_tcp_port={{ qbittorrent_tcp_port }}
qbittorrent_udp_port={{ qbittorrent_udp_port }}
prowlarr_port={{ prowlarr_port }}

# Common Docker Settings
PUID={{ puid }}
PGID={{ pgid }}
TZ={{ TZ }}

# WireGuard specific ENVs (optional, if you want to control them via Ansible vars directly)
# These will be picked up by the environment section in docker-compose.override.yml
WIREGUARD_SERVERURL={{ wireguard_server_url }} # Changed from SERVERURL
WIREGUARD_PEERS={{ wireguard_peers }} # Changed from PEERS
WIREGUARD_INTERNAL_SUBNET={{ wireguard_internal_subnet | default('10.13.13.0/24') }} # Changed from INTERNAL_SUBNET
WIREGUARD_PEERDNS={{ wireguard_peerdns | default('auto') }} # Changed from PEERDNS

# Secrets
# These should be defined as Ansible variables for {{ inventory_hostname }},
# e.g., in host_vars/{{ inventory_hostname }}.yml (unencrypted for now) or later via Ansible Vault.
# If not defined, they will be empty, and Docker Compose might pick them up from an existing .env if one was manually placed.
ADGUARD_USERNAME={{ adguard_username | default('') }}
ADGUARD_PASSWORD={{ adguard_password_for_env | default('') }}
PROWLARR_API_KEY={{ prowlarr_api_key | default('') }}

# GlueTUN / NordVPN Credentials
# These are expected to be in a local .env file loaded by your playbook
NORDVPN_USER={{ nordvpn_user }}
NORDVPN_PASSWORD={{ nordvpn_password }}
NORDVPN_SERVER_COUNTRIES={{ nordvpn_server_countries }}